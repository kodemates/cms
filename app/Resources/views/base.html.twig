                // Instantiate Create
                jQuery('body').midgardCreate({
                    url: function() {
                        return 'javascript:false;';
                    },
                    // Use Aloha for all text editing
                    editorWidgets: {
                        'default': 'aloha'
                    },
                    editorOptions: {
                        aloha: {
